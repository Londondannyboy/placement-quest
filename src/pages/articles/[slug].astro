---
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import { PortableText } from '../../components/PortableText';
import { client, urlFor } from '../../lib/sanity';
import '../../styles/global.css';

export async function getStaticPaths() {
  const articles = await client.fetch(`
    *[_type == "post"] {
      slug
    }
  `);

  return articles
    .filter((article: any) => article.slug?.current)
    .map((article: any) => ({
      params: { slug: article.slug.current },
    }));
}

const { slug } = Astro.params;

const article = await client.fetch(
  `
  *[_type == "post" && slug.current == $slug][0] {
    _id,
    title,
    slug,
    excerpt,
    body,
    publishedAt,
    mainImage,
    author-> {
      name,
      slug
    },
    seoTitle,
    metaDescription,
    focusKeyword
  }
`,
  { slug }
);

if (!article) {
  return Astro.redirect('/articles');
}
---

<Layout 
  title={article.seoTitle || `${article.title} - Relocation Quest`}
  description={article.metaDescription || article.excerpt || `Read our comprehensive guide: ${article.title}. Expert insights on international relocation and global living.`}
  keywords={article.focusKeyword ? `${article.focusKeyword}, relocation, international living, visa, tax optimization` : "relocation, international living, visa, tax optimization"}
  image={article.mainImage ? urlFor(article.mainImage).width(1200).height(630).url() : "/og-image.jpg"}
  imageAlt={article.mainImage?.alt || article.title}
  author={article.author?.name || "Relocation Quest"}
  publishedTime={article.publishedAt}
  type="article"
>
  <div class="min-h-screen bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-6 py-12">
      
      <article class="max-w-4xl mx-auto">
        <header class="mb-8">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{article.title}</h1>
          
          <div class="flex items-center gap-4 text-gray-600 mb-6">
            {article.author && <span>By {article.author.name}</span>}
            {article.publishedAt && (
              <time datetime={article.publishedAt}>
                {new Date(article.publishedAt).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            )}
          </div>
          
          {article.mainImage && (
            <img
              src={urlFor(article.mainImage).width(1200).height(600).url()}
              alt={article.mainImage.alt || article.title}
              class="w-full rounded-lg shadow-lg mb-8"
            />
          )}
        </header>
        
        <div class="prose prose-lg max-w-none">
          {article.body && (
            <div class="bg-white rounded-lg shadow-lg p-8">
              <PortableText value={article.body} client:load />
            </div>
          )}
        </div>
        
        <footer class="mt-12">
          <a href="/articles" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            ‚Üê Back to Articles
          </a>
        </footer>
      </article>
    </div>
  </div>
</Layout>