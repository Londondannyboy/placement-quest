---
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import { PortableText } from '../../components/PortableText';
import { client, urlFor } from '../../lib/sanity';
import '../../styles/global.css';

export async function getStaticPaths() {
  const resources = await client.fetch(`
    *[_type == "post" && slug.current match "resources-*"] {
      slug,
      title
    }
  `);

  return resources
    .filter((resource: any) => resource.slug?.current)
    .map((resource: any) => ({
      params: { 
        resource: resource.slug.current.replace('resources-', '')
      },
    }));
}

const { resource } = Astro.params;

const resourceContent = await client.fetch(
  `
  *[_type == "post" && slug.current == $slug][0] {
    _id,
    title,
    slug,
    excerpt,
    content,
    publishedAt,
    mainImage {
      asset-> {
        _id,
        url
      },
      alt
    },
    author-> {
      name,
      slug
    },
    seoTitle,
    metaDescription,
    focusKeyword
  }
`,
  { slug: `resources-${resource}` }
);

if (!resourceContent) {
  return Astro.redirect('/resources');
}
---

<Layout 
  title={resourceContent.seoTitle || `${resourceContent.title} - Relocation Quest`}
  description={resourceContent.metaDescription || resourceContent.excerpt || `Resource guide: ${resourceContent.title}. Comprehensive resources for international relocation and global living.`}
  keywords={resourceContent.focusKeyword ? `${resourceContent.focusKeyword}, relocation resources, international guides, expat resources` : "relocation resources, international guides, expat resources"}
  image={resourceContent.mainImage ? urlFor(resourceContent.mainImage).width(1200).height(630).url() : "/og-image.jpg"}
  imageAlt={resourceContent.mainImage?.alt || resourceContent.title}
  author={resourceContent.author?.name || "Relocation Quest"}
  publishedTime={resourceContent.publishedAt}
  type="article"
>
  <div class="min-h-screen bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-6 py-12">
      
      <article class="max-w-4xl mx-auto">
        <header class="mb-8">
          <nav class="mb-6">
            <a href="/resources" class="text-blue-600 hover:text-blue-700 font-medium">
              ← All Resources
            </a>
          </nav>
          
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{resourceContent.title}</h1>
          
          <div class="flex items-center gap-4 text-gray-600 mb-6">
            {resourceContent.author && <span>By {resourceContent.author.name}</span>}
            <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">Resource Guide</span>
          </div>
          
          {resourceContent.mainImage && (
            <img
              src={urlFor(resourceContent.mainImage).width(1200).height(600).url()}
              alt={resourceContent.mainImage.alt || resourceContent.title}
              class="w-full rounded-lg shadow-lg mb-8"
            />
          )}
        </header>
        
        <div class="prose prose-lg max-w-none">
          {resourceContent.content && (
            <div class="bg-white rounded-lg shadow-lg p-8">
              <PortableText value={resourceContent.content} client:load />
            </div>
          )}
        </div>
        
        <!-- Related Resources -->
        <div class="mt-12 bg-gradient-to-br from-indigo-50 to-purple-50 rounded-xl p-8">
          <h3 class="text-2xl font-bold mb-6 text-center">More Resources</h3>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <h4 class="font-semibold mb-2">Relocation Guides</h4>
              <a href="/resources/guides" class="text-blue-600 hover:text-blue-700 font-medium">View Guides →</a>
            </div>
            <div class="text-center">
              <div class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h4 class="font-semibold mb-2">FAQ</h4>
              <a href="/resources/faq" class="text-purple-600 hover:text-purple-700 font-medium">View FAQ →</a>
            </div>
            <div class="text-center">
              <div class="w-12 h-12 bg-cyan-600 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
              </div>
              <h4 class="font-semibold mb-2">Knowledge Base</h4>
              <a href="/resources/knowledge-base" class="text-cyan-600 hover:text-cyan-700 font-medium">Browse Knowledge →</a>
            </div>
          </div>
        </div>
        
        <footer class="mt-8">
          <a href="/resources" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            ← Back to Resources
          </a>
        </footer>
      </article>
    </div>
  </div>
</Layout>