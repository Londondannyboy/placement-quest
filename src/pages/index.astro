---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title="Relocation Quest">
  <main class="min-h-screen relative overflow-hidden">
    <!-- Hero gradient background -->
    <div class="absolute inset-0 bg-gradient-primary opacity-5"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-radial opacity-10 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-radial opacity-10 blur-3xl"></div>
    
    <div class="relative container mx-auto px-6 py-12">
      <header class="text-center mb-16 animate-fade-in">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-primary-800 to-secondary-700 bg-clip-text text-transparent">
          Relocation Quest
        </h1>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">Your comprehensive guide to relocating abroad</p>
      </header>
      
      <nav class="flex justify-center gap-4 mb-16">
        <a href="/" class="px-6 py-3 bg-gradient-to-r from-primary-600 to-primary-700 text-white rounded-full hover:shadow-glow transform hover:scale-105 transition-all font-medium">
          Home
        </a>
        <a href="/articles" class="px-6 py-3 bg-white/80 backdrop-blur text-gray-700 rounded-full hover:bg-white hover:shadow-soft transform hover:scale-105 transition-all font-medium">
          Articles
        </a>
        <a href="/studio" class="px-6 py-3 bg-white/80 backdrop-blur text-gray-700 rounded-full hover:bg-white hover:shadow-soft transform hover:scale-105 transition-all font-medium">
          Studio
        </a>
      </nav>
      
      <section class="max-w-5xl mx-auto">
        <div class="bg-white/95 backdrop-blur rounded-2xl shadow-soft p-10 mb-12 animate-fade-up">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 bg-gradient-to-r from-primary-700 to-secondary-600 bg-clip-text text-transparent">
            Welcome to Your Relocation Journey
          </h2>
          <p class="text-gray-700 text-lg mb-4 leading-relaxed">
            Whether you're moving for work, lifestyle, or adventure, we're here to guide you through every step of your international relocation.
          </p>
          <p class="text-gray-700 text-lg mb-8 leading-relaxed">
            Explore our comprehensive articles covering everything from visa requirements to cultural adaptation, housing, and more.
          </p>
          <a href="/articles" class="inline-block px-8 py-4 bg-gradient-to-r from-primary-600 to-secondary-600 text-white rounded-full hover:shadow-glow transform hover:scale-105 transition-all font-semibold text-lg">
            Browse Articles
          </a>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="group bg-white/95 backdrop-blur p-8 rounded-xl shadow-soft hover:shadow-xl transform hover:-translate-y-1 transition-all cursor-pointer">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg mb-4 group-hover:scale-110 transition-transform"></div>
            <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-700 transition-colors">Cyprus</h3>
            <p class="text-gray-600">Discover the Mediterranean lifestyle</p>
          </div>
          <div class="group bg-white/95 backdrop-blur p-8 rounded-xl shadow-soft hover:shadow-xl transform hover:-translate-y-1 transition-all cursor-pointer">
            <div class="w-12 h-12 bg-gradient-to-br from-secondary-500 to-secondary-700 rounded-lg mb-4 group-hover:scale-110 transition-transform"></div>
            <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-secondary-700 transition-colors">Portugal</h3>
            <p class="text-gray-600">Experience the Atlantic charm</p>
          </div>
          <div class="group bg-white/95 backdrop-blur p-8 rounded-xl shadow-soft hover:shadow-xl transform hover:-translate-y-1 transition-all cursor-pointer">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-lg mb-4 group-hover:scale-110 transition-transform"></div>
            <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-700 transition-colors">Spain</h3>
            <p class="text-gray-600">Embrace the vibrant culture</p>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>