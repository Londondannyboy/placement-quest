---
// Dynamic rendering for video support
// export const prerender = true; // Disabled for video functionality

import Layout from '../../layouts/Layout.astro';
import { PortableText } from '../../components/PortableText';
import { client, urlFor } from '../../lib/sanity';
import '../../styles/global.css';

export async function getStaticPaths() {
  const articles = await client.fetch(`
    *[_type == "post"] {
      slug
    }
  `);

  return articles
    .filter((article: any) => article.slug?.current)
    .map((article: any) => ({
      params: { slug: article.slug.current },
    }));
}

const { slug } = Astro.params;

const article = await client.fetch(
  `
  *[_type == "post" && slug.current == $slug][0] {
    _id,
    title,
    slug,
    excerpt,
    body,
    publishedAt,
    mainImage,
    author-> {
      name,
      slug
    },
    seoTitle,
    metaDescription,
    focusKeyword
  }
`,
  { slug }
);

if (!article) {
  return Astro.redirect('/articles');
}
---

<!-- Load Mux Player for article videos -->
<script>
  if (!window.customElements.get('mux-player')) {
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/npm/@mux/mux-player@2';
    document.head.appendChild(script);
  }
</script>

<Layout 
  title={article.seoTitle || `${article.title} - Relocation Quest`}
  description={article.metaDescription || article.excerpt || `Read our comprehensive guide: ${article.title}. Expert insights on international relocation and global living.`}
  keywords={article.focusKeyword ? `${article.focusKeyword}, relocation, international living, visa, tax optimization` : "relocation, international living, visa, tax optimization"}
  image={article.mainImage ? urlFor(article.mainImage).width(1200).height(630).url() : "/og-image.jpg"}
  imageAlt={article.mainImage?.alt || article.title}
  author={article.author?.name || "Relocation Quest"}
  publishedTime={article.publishedAt}
  type="article"
>
  <div class="min-h-screen bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-6 py-12">
      
      <article class="max-w-4xl mx-auto">
        <header class="mb-8">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{article.title}</h1>
          
          <div class="flex items-center gap-4 text-gray-600 mb-6">
            {article.author && <span>By {article.author.name}</span>}
            {article.publishedAt && (
              <time datetime={article.publishedAt}>
                {new Date(article.publishedAt).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            )}
          </div>
          
          {/* Country-specific video for articles */}
          {(() => {
            const countryVideos = {
              cyprus: 'ew9vFwrawM3Eq1MVGHUZwu4IPoFOHVv002Hal1ei02JXM',
              dubai: '5br2hylJ4F009vDLHrxWZ3C7UDTw5901GcXYBjSOWNV8k',
              portugal: 'Oy1LRvO5eSoXGUTthBNS13r007WorSyGvf2YLh1keA5E',
              malta: 'aeX9W002bzUWYKu3Ryln4hLVAplzOm7DfUKm3iZqGGz00',
              singapore: 'dCBAYhMsKX7v00HaI1gHsW8tMI2HZDLlb01KJv5hGkpkI',
              caribbean: '021dUb7I5L2G9dDKBWup4efv9Sxh7ZNAtElSbYkN8C2k',
              'saint kitts': '021dUb7I5L2G9dDKBWup4efv9Sxh7ZNAtElSbYkN8C2k', // Caribbean video
              'saint-kitts': '021dUb7I5L2G9dDKBWup4efv9Sxh7ZNAtElSbYkN8C2k'  // Caribbean video
            };
            
            const titleLower = article.title?.toLowerCase() || '';
            const excerptLower = article.excerpt?.toLowerCase() || '';
            
            // Find matching country in title or excerpt
            const matchedCountry = Object.keys(countryVideos).find(country => 
              titleLower.includes(country) || excerptLower.includes(country)
            );
            
            const playbackId = matchedCountry ? countryVideos[matchedCountry] : null;
            
            if (playbackId) {
              return (
                <div class="w-full rounded-lg shadow-lg mb-8 overflow-hidden">
                  <mux-player
                    playback-id={playbackId}
                    metadata-video-title={article.title}
                    env-key={import.meta.env.PUBLIC_MUX_ENV_KEY || "26hi0t52rcm3pl738jugp7sp8"}
                    autoplay
                    muted
                    loop
                    playsinline
                    controls="true"
                    style="width: 100%; aspect-ratio: 16/9;"
                  />
                </div>
              );
            } else if (article.mainImage) {
              return (
                <img
                  src={urlFor(article.mainImage).width(1200).height(600).url()}
                  alt={article.mainImage.alt || article.title}
                  class="w-full rounded-lg shadow-lg mb-8"
                />
              );
            }
            return null;
          })()}
        </header>
        
        <div class="prose prose-lg max-w-none">
          {article.body && (
            <div class="bg-white rounded-lg shadow-lg p-8">
              <PortableText value={article.body} client:load />
            </div>
          )}
        </div>
        
        <footer class="mt-12">
          <a href="/articles" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            ‚Üê Back to Articles
          </a>
        </footer>
      </article>
    </div>
  </div>
</Layout>