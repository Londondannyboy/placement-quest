---
// Standardized video card component for consistent sizing
export interface Props {
  playbackId: string;
  title: string;
  country: string;
  description: string;
  link: string;
}

const { playbackId, title, country, description, link } = Astro.props;
---

<div class="bg-gray-50 rounded-xl overflow-hidden hover:shadow-lg transition-shadow group">
  <!-- Fixed aspect ratio container for video -->
  <div class="relative aspect-video w-full bg-gray-200">
    <VideoThumbnail 
      playbackId={playbackId}
      title={title}
      description={`Premium relocation opportunities in ${country}`}
      size="large"
      aspectRatio="16:9"
      autoplay={true}
    />
  </div>
  
  <!-- Content section -->
  <div class="p-6">
    <h3 class="text-2xl font-bold mb-3">{country}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <a href={link} class="text-blue-600 hover:text-blue-700 font-medium inline-flex items-center group-hover:text-blue-800">
      Explore {country}
      <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</div>