---
import Layout from '../../layouts/Layout.astro';
import { PortableText } from '../../components/PortableText';
import { client, urlFor } from '../../lib/sanity';
import '../../styles/global.css';

export async function getStaticPaths() {
  const articles = await client.fetch(`
    *[_type == "post"] {
      slug
    }
  `);

  return articles.map((article: any) => ({
    params: { slug: article.slug.current },
  }));
}

const { slug } = Astro.params;

const article = await client.fetch(
  `
  *[_type == "post" && slug.current == $slug][0] {
    _id,
    title,
    slug,
    excerpt,
    body,
    publishedAt,
    mainImage {
      asset-> {
        _id,
        url
      },
      alt
    },
    author-> {
      name,
      slug
    }
  }
`,
  { slug }
);

if (!article) {
  return Astro.redirect('/articles');
}
---

<Layout title={`${article.title} - Relocation Quest`}>
  <main class="min-h-screen bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-6 py-12">
      <nav class="flex justify-center gap-6 mb-12">
        <a href="/" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">Home</a>
        <a href="/articles" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">Articles</a>
        <a href="/studio" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">Studio</a>
      </nav>
      
      <article class="max-w-4xl mx-auto">
        <header class="mb-8">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{article.title}</h1>
          
          <div class="flex items-center gap-4 text-gray-600 mb-6">
            {article.author && <span>By {article.author.name}</span>}
            {article.publishedAt && (
              <time datetime={article.publishedAt}>
                {new Date(article.publishedAt).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            )}
          </div>
          
          {article.mainImage && (
            <img
              src={urlFor(article.mainImage).width(1200).height(600).url()}
              alt={article.mainImage.alt || article.title}
              class="w-full rounded-lg shadow-lg mb-8"
            />
          )}
        </header>
        
        <div class="prose prose-lg max-w-none">
          {article.body && (
            <div class="bg-white rounded-lg shadow-lg p-8">
              <PortableText value={article.body} client:load />
            </div>
          )}
        </div>
        
        <footer class="mt-12">
          <a href="/articles" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            ‚Üê Back to Articles
          </a>
        </footer>
      </article>
    </div>
  </main>
</Layout>