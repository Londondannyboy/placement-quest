---
import Layout from '../../layouts/Layout.astro';
import EnhancedSEO from '../../components/EnhancedSEO.astro';

export const prerender = true;

const title = "Tax Residency Services - Expert International Tax Planning";
const description = "Professional tax residency guidance for international relocation. Optimize your tax obligations with our expert advisors specializing in EU residency programs and global tax planning.";
const canonicalUrl = "https://relocation.quest/services/tax-residency";
---

<Layout title={title}>
  <EnhancedSEO
    title={title}
    description={description}
    canonicalUrl={canonicalUrl}
    type="article"
    keywords="tax residency, international tax planning, EU tax residency, tax optimization, relocation tax advice, golden visa tax benefits"
    structuredData={{
      "@type": "Service",
      "name": "Tax Residency Advisory Services",
      "description": description,
      "provider": {
        "@type": "Organization",
        "name": "Relocation Quest"
      },
      "areaServed": "Worldwide",
      "serviceType": "Tax Advisory"
    }}
  />

  <!-- Breadcrumb Navigation -->
  <div class="bg-gray-50 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <a href="/" class="text-gray-700 hover:text-blue-600">Home</a>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <a href="/services" class="ml-1 text-gray-700 hover:text-blue-600 md:ml-2">Services</a>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-1 text-gray-500 md:ml-2">Tax Residency</span>
            </div>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Expert Tax Residency Advisory
        </h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          Navigate international tax residency with confidence. Our expert advisors help you optimize your tax obligations while achieving your relocation goals.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contact" 
            class="bg-orange-500 hover:bg-orange-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors"
          >
            Get Expert Consultation
          </a>
          <a 
            href="/articles" 
            class="bg-white bg-opacity-20 hover:bg-opacity-30 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors"
          >
            Read Tax Guides
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Service Benefits -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Why Choose Our Tax Residency Services?
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">Expert Guidance</h3>
          <p class="text-gray-600">
            Specialized advisors with deep expertise in international tax law and EU residency programs
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">Tax Optimization</h3>
          <p class="text-gray-600">
            Minimize your global tax burden through strategic residency planning and legal tax structures
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">Fast Processing</h3>
          <p class="text-gray-600">
            Streamlined processes and established relationships to accelerate your residency applications
          </p>
        </div>
      </div>
    </section>

    <!-- Popular Residency Programs -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Popular Tax Residency Programs
      </h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-4">Malta Tax Residency</h3>
          <ul class="space-y-2 text-gray-600 mb-6">
            <li>• 15% effective tax rate for qualifying residents</li>
            <li>• EU membership benefits and access</li>
            <li>• English-speaking environment</li>
            <li>• €500,000+ investment requirement</li>
          </ul>
          <a href="/countries/malta" class="text-blue-600 hover:text-blue-800 font-medium">
            Learn More →
          </a>
        </div>
        <div class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-4">Portugal Golden Visa</h3>
          <ul class="space-y-2 text-gray-600 mb-6">
            <li>• Path to EU citizenship in 5 years</li>
            <li>• No minimum stay requirements</li>
            <li>• Various investment options available</li>
            <li>• €280,000+ minimum investment</li>
          </ul>
          <a href="/countries/portugal" class="text-blue-600 hover:text-blue-800 font-medium">
            Learn More →
          </a>
        </div>
        <div class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-4">Cyprus Golden Visa</h3>
          <ul class="space-y-2 text-gray-600 mb-6">
            <li>• EU membership and Schengen access</li>
            <li>• Mediterranean lifestyle</li>
            <li>• Favorable tax regime for non-doms</li>
            <li>• €300,000+ real estate investment</li>
          </ul>
          <a href="/countries/cyprus" class="text-blue-600 hover:text-blue-800 font-medium">
            Learn More →
          </a>
        </div>
        <div class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-4">Dubai Golden Visa</h3>
          <ul class="space-y-2 text-gray-600 mb-6">
            <li>• 0% personal income tax</li>
            <li>• Strategic business location</li>
            <li>• 10-year renewable visa options</li>
            <li>• $500,000+ investment requirement</li>
          </ul>
          <a href="/countries/dubai" class="text-blue-600 hover:text-blue-800 font-medium">
            Learn More →
          </a>
        </div>
      </div>
    </section>

    <!-- Process Steps -->
    <section class="mb-16 bg-gray-50 rounded-lg p-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Our Tax Residency Process
      </h2>
      <div class="grid md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold">
            1
          </div>
          <h3 class="font-semibold mb-2">Initial Consultation</h3>
          <p class="text-gray-600 text-sm">
            Comprehensive assessment of your current situation and residency goals
          </p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold">
            2
          </div>
          <h3 class="font-semibold mb-2">Strategy Development</h3>
          <p class="text-gray-600 text-sm">
            Custom tax optimization strategy tailored to your specific circumstances
          </p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold">
            3
          </div>
          <h3 class="font-semibold mb-2">Application Support</h3>
          <p class="text-gray-600 text-sm">
            Complete application assistance and document preparation
          </p>
        </div>
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-xl font-bold">
            4
          </div>
          <h3 class="font-semibold mb-2">Ongoing Support</h3>
          <p class="text-gray-600 text-sm">
            Continued assistance with compliance and optimization
          </p>
        </div>
      </div>
    </section>

    <!-- Cost-Benefit Analysis -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Tax Residency Cost-Benefit Analysis
      </h2>
      <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Country</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Min Investment</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tax Rate</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">EU Access</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timeline</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">Malta</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">€500,000+</td>
              <td class="px-6 py-4 whitespace-nowrap text-green-600 font-medium">15%</td>
              <td class="px-6 py-4 whitespace-nowrap text-green-600">✓</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">6-12 months</td>
            </tr>
            <tr class="bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">Portugal</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">€280,000+</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">20-28%</td>
              <td class="px-6 py-4 whitespace-nowrap text-green-600">✓</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">3-6 months</td>
            </tr>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">Cyprus</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">€300,000+</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">12.5-35%</td>
              <td class="px-6 py-4 whitespace-nowrap text-green-600">✓</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">3-4 months</td>
            </tr>
            <tr class="bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">Dubai</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">$500,000+</td>
              <td class="px-6 py-4 whitespace-nowrap text-green-600 font-medium">0%</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-400">✗</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-600">2-3 months</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-blue-600 rounded-lg text-white p-8 text-center">
      <h2 class="text-3xl font-bold mb-4">
        Ready to Optimize Your Tax Residency?
      </h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Schedule a consultation with our tax residency experts and discover the optimal path for your international relocation goals.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="bg-orange-500 hover:bg-orange-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors"
        >
          Schedule Consultation
        </a>
        <a 
          href="/resources/faq" 
          class="bg-white bg-opacity-20 hover:bg-opacity-30 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors"
        >
          View FAQ
        </a>
      </div>
    </section>

  </main>
</Layout>