---
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import { PortableText } from '../../components/PortableText';
import { client, urlFor } from '../../lib/sanity';
import '../../styles/global.css';

export async function getStaticPaths() {
  const services = await client.fetch(`
    *[_type == "post" && slug.current match "services-*"] {
      slug,
      title
    }
  `);

  return services
    .filter((service: any) => service.slug?.current)
    .map((service: any) => ({
      params: { 
        service: service.slug.current.replace('services-', '')
      },
    }));
}

const { service } = Astro.params;

const serviceContent = await client.fetch(
  `
  *[_type == "post" && slug.current == $slug][0] {
    _id,
    title,
    slug,
    excerpt,
    content,
    publishedAt,
    mainImage {
      asset-> {
        _id,
        url
      },
      alt
    },
    author-> {
      name,
      slug
    },
    seoTitle,
    metaDescription,
    focusKeyword
  }
`,
  { slug: `services-${service}` }
);

if (!serviceContent) {
  return Astro.redirect('/services');
}
---

<Layout 
  title={serviceContent.seoTitle || `${serviceContent.title} - Relocation Quest`}
  description={serviceContent.metaDescription || serviceContent.excerpt || `Professional service: ${serviceContent.title}. Expert international relocation and business services.`}
  keywords={serviceContent.focusKeyword ? `${serviceContent.focusKeyword}, relocation services, international business, professional services` : "relocation services, international business, professional services"}
  image={serviceContent.mainImage ? urlFor(serviceContent.mainImage).width(1200).height(630).url() : "/og-image.jpg"}
  imageAlt={serviceContent.mainImage?.alt || serviceContent.title}
  author={serviceContent.author?.name || "Relocation Quest"}
  publishedTime={serviceContent.publishedAt}
  type="article"
>
  <div class="min-h-screen bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-6 py-12">
      
      <article class="max-w-4xl mx-auto">
        <header class="mb-8">
          <nav class="mb-6">
            <a href="/services" class="text-blue-600 hover:text-blue-700 font-medium">
              ← All Services
            </a>
          </nav>
          
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{serviceContent.title}</h1>
          
          <div class="flex items-center gap-4 text-gray-600 mb-6">
            {serviceContent.author && <span>By {serviceContent.author.name}</span>}
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">Professional Service</span>
          </div>
          
          {serviceContent.mainImage && (
            <img
              src={urlFor(serviceContent.mainImage).width(1200).height(600).url()}
              alt={serviceContent.mainImage.alt || serviceContent.title}
              class="w-full rounded-lg shadow-lg mb-8"
            />
          )}
        </header>
        
        <div class="prose prose-lg max-w-none">
          {serviceContent.content && (
            <div class="bg-white rounded-lg shadow-lg p-8">
              <PortableText value={serviceContent.content} client:load />
            </div>
          )}
        </div>
        
        <!-- Contact CTA -->
        <div class="mt-12 bg-gradient-to-r from-blue-600 to-orange-500 text-white rounded-xl p-8 text-center">
          <h3 class="text-2xl font-bold mb-4">Ready to Get Started?</h3>
          <p class="text-xl mb-6 text-blue-100">Get expert guidance tailored to your specific needs</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
              Schedule Consultation
            </a>
            <a href="/services" class="inline-block bg-white bg-opacity-20 text-white px-8 py-3 rounded-lg font-semibold hover:bg-opacity-30 transition-colors">
              View All Services
            </a>
          </div>
        </div>
        
        <footer class="mt-8">
          <a href="/services" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            ← Back to Services
          </a>
        </footer>
      </article>
    </div>
  </div>
</Layout>