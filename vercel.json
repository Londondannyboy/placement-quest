{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "functions": {
    "src/pages/api/cron/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/publish-content",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/daily-content",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/weekly-review",
      "schedule": "0 10 * * 1"
    }
  ]
}