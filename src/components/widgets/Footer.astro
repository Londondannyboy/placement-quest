---
import { sanityClient } from 'sanity:client';

const currentYear = new Date().getFullYear();

const categories = await sanityClient.fetch(`*[_type == "category"] | order(title asc) {
  title,
  slug,
  description
}`);

const socialLinks = [
  {
    ariaLabel: 'X (Twitter)',
    href: '#',
    icon: 'tabler:brand-x',
  },
  {
    ariaLabel: 'LinkedIn',
    href: '#',
    icon: 'tabler:brand-linkedin',
  },
  {
    ariaLabel: 'Facebook',
    href: '#',
    icon: 'tabler:brand-facebook',
  },
  {
    ariaLabel: 'Instagram',
    href: '#',
    icon: 'tabler:brand-instagram',
  },
  {
    ariaLabel: 'YouTube',
    href: '#',
    icon: 'tabler:brand-youtube',
  },
];

const footerLinks = [
  {
    title: 'Explore',
    links: [
      { text: 'All Articles', href: '/blog' },
      { text: 'Categories', href: '/categories' },
      { text: 'Authors', href: '/authors' },
      { text: 'Popular', href: '/popular' },
    ],
  },
  {
    title: 'Resources',
    links: [
      { text: 'Visa Guides', href: '/visa-guides' },
      { text: 'Tax Calculator', href: '/tax-calculator' },
      { text: 'Country Profiles', href: '/countries' },
      { text: 'Expat Communities', href: '/communities' },
    ],
  },
  {
    title: 'Company',
    links: [
      { text: 'About Us', href: '/about' },
      { text: 'Contact', href: '/contact' },
      { text: 'Privacy Policy', href: '/privacy' },
      { text: 'Terms of Service', href: '/terms' },
    ],
  },
];
---

<footer class="relative mt-16 border-t border-gray-200 dark:border-gray-800">
  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-primary-50/5 to-secondary-50/10 pointer-events-none" aria-hidden="true"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
      
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-4">
          <a class="inline-flex items-center gap-2.5 text-2xl font-bold text-gray-900 dark:text-white" href="/">
            <span class="bg-gradient-primary bg-clip-text text-transparent">Relocation</span>
            <span>Quest</span>
          </a>
        </div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          <p class="mb-4">Your trusted guide for international relocation, visa information, and global lifestyle insights.</p>
          <p class="text-xs">© {currentYear} Relocation Quest. All rights reserved.</p>
        </div>
      </div>
      
      {categories.length > 0 && (
        <div class="col-span-6 md:col-span-3 lg:col-span-2">
          <div class="font-medium mb-3 text-gray-800 dark:text-gray-200">Categories</div>
          <ul class="text-sm space-y-2">
            {categories.slice(0, 5).map((category) => (
              <li>
                <a
                  class="text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors duration-150"
                  href={`/category/${category.slug.current}`}
                >
                  {category.title}
                </a>
              </li>
            ))}
            {categories.length > 5 && (
              <li>
                <a
                  class="text-primary-600 hover:text-primary-700 dark:text-primary-400 font-medium"
                  href="/categories"
                >
                  View all →
                </a>
              </li>
            )}
          </ul>
        </div>
      )}
      
      {footerLinks.map(({ title, links }) => (
        <div class="col-span-6 md:col-span-3 lg:col-span-2">
          <div class="font-medium mb-3 text-gray-800 dark:text-gray-200">{title}</div>
          <ul class="text-sm space-y-2">
            {links.map(({ text, href }) => (
              <li>
                <a
                  class="text-gray-600 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors duration-150"
                  href={href}
                >
                  {text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8 border-t border-gray-200 dark:border-gray-800">
      <ul class="flex mb-4 md:order-2 md:mb-0 space-x-2">
        {socialLinks.map(({ ariaLabel, href, icon }) => (
          <li>
            <a
              class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg p-2.5 inline-flex items-center transition-all duration-150"
              aria-label={ariaLabel}
              href={href}
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                {icon === 'tabler:brand-x' && (
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                )}
                {icon === 'tabler:brand-linkedin' && (
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                )}
                {icon === 'tabler:brand-facebook' && (
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                )}
                {icon === 'tabler:brand-instagram' && (
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1 1 12.324 0 6.162 6.162 0 0 1-12.324 0zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm4.965-10.405a1.44 1.44 0 1 1 2.881.001 1.44 1.44 0 0 1-2.881-.001z" />
                )}
                {icon === 'tabler:brand-youtube' && (
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                )}
              </svg>
            </a>
          </li>
        ))}
      </ul>
      
      <div class="text-sm text-gray-600 dark:text-gray-400 md:order-1">
        <span>Made with</span>
        <span class="text-red-500 mx-1">♥</span>
        <span>by the Relocation Quest team</span>
      </div>
    </div>
  </div>
</footer>