---
import Layout from '../layouts/Layout.astro';
import AnimatedSection from '../components/AnimatedSection.astro';
import EnhancedButton from '../components/EnhancedButton.astro';

// SEO optimized for placement agent keywords
const seoTitle = "Top Private Equity Placement Agents 2025 | Quest Placement Services";
const seoDescription = "Comprehensive directory of top placement agents for private equity fundraising. Compare fees, track records, and services from Campbell Lutyens, Park Hill, Evercore and more.";
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  keywords="top private equity placement agents, placement agents, quest placement agent, placement agent fees, private equity placement agent, list of placement agents"
>
  <!-- Hero Section with Key Keywords -->
  <section class="relative min-h-[60vh] md:min-h-[70vh] lg:min-h-[80vh] flex items-center justify-center bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative z-10 container mx-auto px-4 text-center text-white">
      <AnimatedSection>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Top Private Equity Placement Agents<br/>
          <span class="text-yellow-400">& Fund Placement Intelligence</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto text-gray-200">
          The Bloomberg Terminal for PE placement agents. Access comprehensive profiles, 
          fee structures, and real-time fundraising intelligence.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <EnhancedButton href="/placement-agents/" variant="primary">
            Browse All Placement Agents
          </EnhancedButton>
          <EnhancedButton href="/top-private-equity-placement-agents/" variant="secondary">
            View Top Rankings 2025
          </EnhancedButton>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Key Stats Section -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-900">200+</div>
          <div class="text-gray-600">Placement Agents</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-900">$500B+</div>
          <div class="text-gray-600">AUM Raised</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-900">2-3%</div>
          <div class="text-gray-600">Typical Fees</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-900">Daily</div>
          <div class="text-gray-600">Market Updates</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Top Placement Agents Section (Target Keyword) -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <AnimatedSection>
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
          Top Private Equity Placement Agents
        </h2>
        <p class="text-xl text-gray-600 text-center mb-12 max-w-3xl mx-auto">
          Leading placement agents ranked by AUM raised, deal volume, and market presence
        </p>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Campbell Lutyens -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <h3 class="text-xl font-bold mb-2">Campbell Lutyens</h3>
            <div class="text-sm text-gray-600 mb-3">Global Leader</div>
            <ul class="space-y-2 text-sm">
              <li>• $488B+ total raised</li>
              <li>• 14 global offices</li>
              <li>• All asset classes</li>
            </ul>
            <a href="/placement-agents/campbell-lutyens/" class="inline-block mt-4 text-blue-600 hover:text-blue-800 font-semibold">
              View Full Profile →
            </a>
          </div>

          <!-- Park Hill Group -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <h3 class="text-xl font-bold mb-2">Park Hill Group (PJT)</h3>
            <div class="text-sm text-gray-600 mb-3">US Powerhouse</div>
            <ul class="space-y-2 text-sm">
              <li>• Blackstone heritage</li>
              <li>• Large-cap focus</li>
              <li>• Top US placement agent</li>
            </ul>
            <a href="/placement-agents/park-hill-group/" class="inline-block mt-4 text-blue-600 hover:text-blue-800 font-semibold">
              View Full Profile →
            </a>
          </div>

          <!-- Evercore -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <h3 class="text-xl font-bold mb-2">Evercore</h3>
            <div class="text-sm text-gray-600 mb-3">Bulge Bracket</div>
            <ul class="space-y-2 text-sm">
              <li>• Elite placement team</li>
              <li>• Mega-fund specialist</li>
              <li>• Global reach</li>
            </ul>
            <a href="/placement-agents/evercore/" class="inline-block mt-4 text-blue-600 hover:text-blue-800 font-semibold">
              View Full Profile →
            </a>
          </div>

          <!-- Lazard -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <h3 class="text-xl font-bold mb-2">Lazard</h3>
            <div class="text-sm text-gray-600 mb-3">European Strength</div>
            <ul class="space-y-2 text-sm">
              <li>• Cross-border expertise</li>
              <li>• Comprehensive services</li>
              <li>• Strong LP network</li>
            </ul>
            <a href="/placement-agents/lazard/" class="inline-block mt-4 text-blue-600 hover:text-blue-800 font-semibold">
              View Full Profile →
            </a>
          </div>

          <!-- Eaton Partners -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <h3 class="text-xl font-bold mb-2">Eaton Partners (Stifel)</h3>
            <div class="text-sm text-gray-600 mb-3">Middle Market Leader</div>
            <ul class="space-y-2 text-sm">
              <li>• 40+ year track record</li>
              <li>• $140B+ raised</li>
              <li>• Mid-market focus</li>
            </ul>
            <a href="/placement-agents/eaton-partners/" class="inline-block mt-4 text-blue-600 hover:text-blue-800 font-semibold">
              View Full Profile →
            </a>
          </div>

          <!-- MVision -->
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <h3 class="text-xl font-bold mb-2">MVision</h3>
            <div class="text-sm text-gray-600 mb-3">Independent Advisor</div>
            <ul class="space-y-2 text-sm">
              <li>• Emerging markets</li>
              <li>• Boutique approach</li>
              <li>• Specialized expertise</li>
            </ul>
            <a href="/placement-agents/mvision/" class="inline-block mt-4 text-blue-600 hover:text-blue-800 font-semibold">
              View Full Profile →
            </a>
          </div>
        </div>

        <div class="text-center mt-12">
          <EnhancedButton href="/placement-agents/" variant="primary">
            View All Placement Agents
          </EnhancedButton>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Placement Agent Fees Section (Target Keyword) -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <AnimatedSection>
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
          Private Equity Placement Agent Fees
        </h2>
        <p class="text-xl text-gray-600 text-center mb-12 max-w-3xl mx-auto">
          Understanding placement agent compensation structures and typical fee ranges
        </p>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <div class="bg-white rounded-lg p-6 shadow-lg">
            <h3 class="text-xl font-bold mb-4">Typical Fee Structures</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">•</span>
                <div>
                  <strong>Success Fee:</strong> 1.5-3% of capital raised
                </div>
              </li>
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">•</span>
                <div>
                  <strong>Retainer:</strong> $10-30K per month
                </div>
              </li>
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">•</span>
                <div>
                  <strong>Tiered Structure:</strong> Lower % on larger amounts
                </div>
              </li>
            </ul>
          </div>

          <div class="bg-white rounded-lg p-6 shadow-lg">
            <h3 class="text-xl font-bold mb-4">Fee Factors</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">•</span>
                <div>Fund size and complexity</div>
              </li>
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">•</span>
                <div>Geographic coverage required</div>
              </li>
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">•</span>
                <div>Timeline and urgency</div>
              </li>
              <li class="flex items-start">
                <span class="text-blue-600 mr-2">•</span>
                <div>Agent's track record</div>
              </li>
            </ul>
          </div>
        </div>

        <div class="text-center mt-8">
          <EnhancedButton href="/placement-agent-fees/" variant="secondary">
            Detailed Fee Analysis →
          </EnhancedButton>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Quest Placement Agent Section (Brand + Keyword) -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <AnimatedSection>
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
          Quest - Your Placement Agent Intelligence Platform
        </h2>
        <p class="text-xl text-gray-600 text-center mb-12 max-w-3xl mx-auto">
          Quest provides comprehensive placement agent research, rankings, and real-time fundraising intelligence
        </p>

        <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Agent Rankings</h3>
            <p class="text-gray-600">Data-driven rankings of placement agents by performance</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Fee Intelligence</h3>
            <p class="text-gray-600">Comprehensive placement agent fee analysis and benchmarks</p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Market Insights</h3>
            <p class="text-gray-600">Real-time fundraising trends and market intelligence</p>
          </div>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- List of Placement Agents Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <AnimatedSection>
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
          Complete List of Placement Agents
        </h2>
        <p class="text-xl text-gray-600 text-center mb-12 max-w-3xl mx-auto">
          Browse our comprehensive directory of private equity placement agents worldwide
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 max-w-6xl mx-auto">
          <div class="bg-white p-4 rounded-lg">
            <h3 class="font-semibold mb-2 text-blue-900">Global Leaders</h3>
            <ul class="space-y-1 text-sm">
              <li><a href="/placement-agents/campbell-lutyens/" class="text-gray-700 hover:text-blue-600">Campbell Lutyens</a></li>
              <li><a href="/placement-agents/park-hill/" class="text-gray-700 hover:text-blue-600">Park Hill Group</a></li>
              <li><a href="/placement-agents/evercore/" class="text-gray-700 hover:text-blue-600">Evercore</a></li>
              <li><a href="/placement-agents/lazard/" class="text-gray-700 hover:text-blue-600">Lazard</a></li>
            </ul>
          </div>

          <div class="bg-white p-4 rounded-lg">
            <h3 class="font-semibold mb-2 text-blue-900">US Specialists</h3>
            <ul class="space-y-1 text-sm">
              <li><a href="/placement-agents/eaton-partners/" class="text-gray-700 hover:text-blue-600">Eaton Partners</a></li>
              <li><a href="/placement-agents/triago/" class="text-gray-700 hover:text-blue-600">Triago</a></li>
              <li><a href="/placement-agents/capstone/" class="text-gray-700 hover:text-blue-600">Capstone Partners</a></li>
              <li><a href="/placement-agents/credit-suisse/" class="text-gray-700 hover:text-blue-600">Credit Suisse</a></li>
            </ul>
          </div>

          <div class="bg-white p-4 rounded-lg">
            <h3 class="font-semibold mb-2 text-blue-900">European Focus</h3>
            <ul class="space-y-1 text-sm">
              <li><a href="/placement-agents/mvision/" class="text-gray-700 hover:text-blue-600">MVision</a></li>
              <li><a href="/placement-agents/rede-partners/" class="text-gray-700 hover:text-blue-600">Rede Partners</a></li>
              <li><a href="/placement-agents/monument/" class="text-gray-700 hover:text-blue-600">Monument Group</a></li>
              <li><a href="/placement-agents/sixpoint/" class="text-gray-700 hover:text-blue-600">Sixpoint Partners</a></li>
            </ul>
          </div>

          <div class="bg-white p-4 rounded-lg">
            <h3 class="font-semibold mb-2 text-blue-900">Boutique Firms</h3>
            <ul class="space-y-1 text-sm">
              <li><a href="/placement-agents/acanthus/" class="text-gray-700 hover:text-blue-600">Acanthus Advisors</a></li>
              <li><a href="/placement-agents/first-avenue/" class="text-gray-700 hover:text-blue-600">First Avenue</a></li>
              <li><a href="/placement-agents/greenhill/" class="text-gray-700 hover:text-blue-600">Greenhill Cogent</a></li>
              <li><a href="/placement-agents/probitas/" class="text-gray-700 hover:text-blue-600">Probitas Partners</a></li>
            </ul>
          </div>
        </div>

        <div class="text-center mt-12">
          <EnhancedButton href="/list-of-placement-agents/" variant="primary">
            View Complete Directory
          </EnhancedButton>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-blue-900 to-blue-700">
    <div class="container mx-auto px-4 text-center">
      <AnimatedSection>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Find Your Ideal Placement Agent
        </h2>
        <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
          Access comprehensive profiles, performance data, and contact information for top placement agents
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <EnhancedButton href="/placement-agents/" variant="white">
            Browse All Agents
          </EnhancedButton>
          <EnhancedButton href="/contact/" variant="outline-white">
            Get Matched
          </EnhancedButton>
        </div>
      </AnimatedSection>
    </div>
  </section>
</Layout>